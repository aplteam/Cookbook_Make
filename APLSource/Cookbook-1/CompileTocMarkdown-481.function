 md←CompileTocMarkdown chapters;filename;md;type;no;title;lastType;item;firstFlag;i;noOf;k
 md←''
 md,←⊂'Dyalog Cookbook'
 md,←⊂'==============='
 md,←⊂''
 md,←⊂'Table of contents'
 md,←⊂'--------------------'
 md,←⊂''

 lastType←''
 firstFlag←0
 noOf←⊃⍴chapters
 :For i :In ⍳noOf
     title←2⊃chapters[i;]
     no←GetRunningNumber 1⊃chapters[i;]
     type←AppendicesStartAt≤no
     filename←3⊃chapters[i;]
     :If lastType≢type
         md,←⊂''
         md,←⊂'### ',(1+type)⊃'Chapters' 'Appendicies'
         md,←⊂''
         lastType←type
         firstFlag←1
     :EndIf
     :If type
         title←(title⍳'_')↓title
         k←(⍕1+no-50),'.'
     :Else
         k←(⍕no),'.'
     :EndIf
     title←{' '@(⍸⍵='-')⊣⍵}title
     :If firstFlag
         item←k,' [',title,'](./',filename,'{id="overalltoc"})'
         firstFlag←0
     :Else
         item←k,' [',title,'](./',filename,')'
     :EndIf
     md,←⊂item
 :EndFor

 md,←⊂''

